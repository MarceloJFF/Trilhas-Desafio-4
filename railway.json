{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "nixpacksPlan": {
      "providers": [
        "...",
        "java"
      ]
    },
    "dockerfilePath": "src/main/docker/Dockerfile.jvm"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "./mvnw quarkus:dev",
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
